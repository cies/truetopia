= partial 'projects/header', :project => @project
= partial 'projects/step_header'
.subcolumns.bottom_line
  .c75r
    .subcr
      .float_left
        %h1.content
          = document.current_version.title
      #nav_main
        %ul
          %li{ :id => (current == :show ? 'current' : '') }
            = link_to 'view', document_url(@document), :title => "view document ##{@document.id}"
          %li{ :id => (current == :edit ? 'current' : '') }
            = link_to 'edit', document_url(@document, :action => 'edit'), :title => 'edit this document'
          %li{ :id => (current == :history ? 'current' : '') }
            = link_to "history (#{document.versions.count})", document_url(@document, :action => 'history'), :title => 'view the change history'
          %li{ :id => (current == :discussion ? 'current' : '') }
            = link_to "discussion (#{document.discussion.posts.count})", discussion_url(:discussion_parent => "#{params[:document_parent]}Document"), :title => 'discuss this document'
  .c25l
    .subcl
      %h1.content{ :align => 'right' }
        %span.pre_title== document:#{document.number}.#{document.current_version.number}