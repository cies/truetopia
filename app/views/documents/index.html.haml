  .c75r
    .subcr
      %h1
        Overzicht van documenten
      - if @documents.any?
        %h3
          Recent gewijzigde documenten
        = @documents.each do |document|
          .subpage
            .subpage_header
              %span.title
                - title_html= capture_haml do
                  %span.number= '#' + document.id.to_s
                  = document.current_version.title
                = link_to title_html, url(:document, :id => document.id)
              .meta
                = render_relative_date document.created_at
                gestart door
                = link_to document.user.login, url(:user, :login => document.user.login)
                %br/
                huidige versie
                = document.version_count
                verscheen
                = render_relative_date document.current_version.created_at
                door
                = link_to document.current_version.user.login, url(:user, :login => document.current_version.user.login)
            .subpage_content
              = (html_escape document.current_version.content).gsub("\n", '<br/>')[1..200].strip + '...'
            .subpage_footer
              %strong
                = link_to 'lees verder...', url(:document, :id => document.id)

        #pagination
